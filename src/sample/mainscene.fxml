<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.homeController">
    <children>
        <MenuBar prefHeight="6.0" prefWidth="510.0" style="-fx-background-color: #0F0335;" VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="Инструменты">
                    <items>
                        <MenuItem fx:id="toolsDriver" mnemonicParsing="false" text="Карточка водителя" />
                        <MenuItem fx:id="toolsCar" mnemonicParsing="false" text="Карточка автомобиля" />
                        <MenuItem fx:id="toolsTracker" mnemonicParsing="false" text="Карточка трекера" />
                        <MenuItem fx:id="createUsers" mnemonicParsing="false" text="Создать пользователя" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Справочники">
                    <items>
                        <MenuItem fx:id="referenceDriver" mnemonicParsing="false" text="Справочник водители" />
                        <MenuItem fx:id="referenceCars" mnemonicParsing="false" text="Автомобили таксопарка" />
                        <MenuItem fx:id="referenceTracker" mnemonicParsing="false" text="Трекеры" />
                        <MenuItem fx:id="fuelcontrol" mnemonicParsing="false" text="Расход топлива" />
                        <MenuItem fx:id="users" mnemonicParsing="false" text="Пользователи" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Отчеты">
                    <items>
                        <MenuItem fx:id="reportsFuelAccount" mnemonicParsing="false" text="Расход топлива" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Настройки">
                    <items>
                        <MenuItem mnemonicParsing="false" text="об  приложении" />
                    </items>
                </Menu>
            </menus>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
        </MenuBar>
        <AnchorPane nodeOrientation="RIGHT_TO_LEFT" style="-fx-background-color: #F3EFFF;" VBox.vgrow="ALWAYS" />
    </children>
</VBox>
